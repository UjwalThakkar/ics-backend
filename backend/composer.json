{
    "name": "indian-consular/services-api",
    "description": "Indian Consular Services API - PHP 8.3 Backend",
    "type": "project",
    "require": {
        "php": ">=8.2",
        "ext-pdo": "*",
        "ext-json": "*",
        "ext-curl": "*",
        "firebase/php-jwt": "^6.10",
        "phpmailer/phpmailer": "^6.9",
        "vlucas/phpdotenv": "^5.6",
        "ramsey/uuid": "^4.7",
        "respect/validation": "^2.3"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.5",
        "symfony/var-dumper": "^7.0"
    },
    "autoload": {
        "psr-4": {
            "IndianConsular\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "IndianConsular\\Tests\\": "tests/"
        }
    },
    "config": {
        "optimize-autoloader": true,
        "preferred-install": "dist",
        "sort-packages": true
    },
    "minimum-stability": "stable",
    "prefer-stable": true,
    "scripts": {
        "test": "phpunit",
        "serve": "php -S localhost:8000 -t public/"
    }
}
